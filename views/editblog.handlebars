<div class="card">
    <form action="" data-blogId="{{id}}" id="newBlog">
        <div class="card-body mb-3">
            <label for="title" class="form-label">Your Blog title</label>
            <input value="{{title}}"type="text" class="form-control" id="title" placeholder="title">
        </div>
        <div class=" card-body mb-3">
            <label for="body" class="form-label">Blog Content</label>
            <textarea class="form-control" id="body" cols="30" rows="3">{{contents}}</textarea>
        </div>
        <div class="card-body">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
<script src="/js/updateBlog.js"></script>